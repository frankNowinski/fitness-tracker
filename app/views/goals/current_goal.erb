    <a href="/goals/<%=@entry.goal.id%>/update"><button type="submit" class="btn btn-success btn-lg">Update Goal</button></a>
  </div>
</div>

<div class="form-group row">
  <div class="col-sm-1">
    <a href="/goals/<%=@entry.goal.id%>/edit"><button type="submit" class="btn btn-success btn-lg">Edit Goal</button></a>
  </div>
</div>

<div class="form-group row">
  <div class="col-sm-1">
    <a href="/goals/<%=@entry.goal.id%>/delete"><button type="submit" class="btn btn-danger btn-lg">Delete Goal</button></a>
  </div>
</div>
